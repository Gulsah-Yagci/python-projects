<MyGridLayout>

    name:name
    game:game
    color:color

    GridLayout:
        cols:1
        size: root.width, root.height
        GridLayout:
            cols:2

            Label:
                text: 'Name'
            TextInput:
                id:name
                multiline:False

            Label:
                text: 'Game'
            TextInput:
                id:game
                multiline:False

            Label:
                text: 'Color'
            TextInput:
                id:color
                multiline:False

        Button:
            text: 'Submit'
            font_size: 30
            on_press: root.press()